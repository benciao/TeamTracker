<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<!-- Testbereich -->
	<servlet>
		<servlet-name>vaadin</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.GAEApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>com.ecg.mts.support.teamtracker.vaadin.TeamTrackerApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>vaadin</servlet-name>
		<url-pattern>/teamtracker/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vaadin</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.servlet.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/CreateAdminUser</url-pattern>
	</servlet-mapping>
	<!-- Ende Testbereich -->
	<servlet>
		<servlet-name>LogonServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.servlet.LogonServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogonServlet</servlet-name>
		<url-pattern>/Logon</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserListServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.servlet.UserListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserListServlet</servlet-name>
		<url-pattern>/UserList</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GroupListServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.servlet.GroupListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GroupListServlet</servlet-name>
		<url-pattern>/GroupList</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AndroidAccessServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.android.AndroidAccessServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AndroidAccessServlet</servlet-name>
		<url-pattern>/isAccessible</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AndroidStatusServlet</servlet-name>
		<servlet-class>com.ecg.mts.support.teamtracker.android.AndroidStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AndroidStatusServlet</servlet-name>
		<url-pattern>/status</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>jsp/Logon.jsp</welcome-file>
	</welcome-file-list>
</web-app>
